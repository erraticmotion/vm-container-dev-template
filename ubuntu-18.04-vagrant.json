{
    "variables": {
        "template": "ubuntu-18.04-vagrant",
        "cpus": "4",
        "cores": "1",
        "disk_size": "20480",
        "memory": "4096",
        "box_basename": "ubuntu-18.04",
        "headless": "False",
        "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
        "iso_checksum_type": "sha256",
        "iso_name": "ubuntu-18.04.3-server-amd64.iso",
        "build_timestamp": "{{isotime \"20060102150405\"}}",
        "mirror": "http://cdimage.ubuntu.com",
        "mirror_directory": "ubuntu/releases/bionic/release",
        "name": "ubuntu-18.04",
        "preseed_path": "preseed.cfg"
      },
      "builders": [
        {
          "type": "vmware-iso",
          "output_directory": "./boxes/building/{{user `template`}}-vmware",
          "ssh_username": "vagrant",
          "ssh_password": "vagrant",
          "ssh_port": 22,
          "ssh_wait_timeout": "10000s",
          "vm_name": "{{ user `template` }}",
          "iso_checksum": "{{user `iso_checksum`}}",
          "iso_checksum_type": "{{user `iso_checksum_type`}}",
          "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
          "disk_size": "{{user `disk_size`}}",
          "vmx_data": {
            "cpuid.coresPerSocket": "{{ user `cores` }}",
            "ethernet0.pciSlotNumber": "32",
            "memsize": "{{ user `memory` }}",
            "numvcpus": "{{ user `cpus` }}",
            "vhv.enable": "true"
          },
          "boot_wait": "10s",
          "http_directory": "http",
          "boot_command": [
            "<esc><wait>",
            "<esc><wait>",
            "<enter><wait>",
            "/install/vmlinuz<wait>",
            " auto<wait>",
            " console-setup/ask_detect=false<wait>",
            " console-setup/layoutcode=us<wait>",
            " console-setup/modelcode=pc105<wait>",
            " debconf/frontend=noninteractive<wait>",
            " debian-installer=en_US<wait>",
            " fb=false<wait>",
            " initrd=/install/initrd.gz<wait>",
            " kbd-chooser/method=us<wait>",
            " keyboard-configuration/layout=USA<wait>",
            " keyboard-configuration/variant=USA<wait>",
            " locale=en_US<wait>",
            " netcfg/get_domain=vm<wait>",
            " netcfg/get_hostname=vagrant<wait>",
            " grub-installer/bootdev=/dev/sda<wait>",
            " noapic<wait>",
            " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
            " -- <wait>",
            "<enter><wait>"
          ],
          "guest_os_type": "ubuntu-64",
          "headless": "{{ user `headless` }}",
          "vmx_remove_ethernet_interfaces": true,
          "tools_upload_flavor": "linux",
          "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
        }
      ],
      "provisioners": [
        {
          "environment_vars": [
            "HOME_DIR=/home/vagrant"
          ],
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
          "expect_disconnect": true,
          "scripts": [
            "./scripts/update.sh",
            "./scripts/sshd.sh",
            "./scripts/networking.sh",
            "./scripts/sudoers.sh",
            "./scripts/vagrant.sh",
            "./scripts/vmware.sh",
            "./scripts/cleanup.sh",
            "./scripts/docker.sh",
            "./scripts/minimize.sh"
          ],
          "type": "shell"
        }
      ],
      "post-processors": [
        {
          "type": "vagrant",
          "compression_level": 9,
          "output": "./boxes/{{user `template`}}.{{.Provider}}.box"
        }
      ]
}